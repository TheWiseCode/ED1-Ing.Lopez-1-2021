PilaNum::PilaNum() {
	datos = 0;
}

bool PilaNum::vacia() {
	return datos == 0;
}

void PilaNum::meter(int e) {
	datos = datos * 10 + e;
}

void PilaNum::sacar(int& e) {
	if (!vacia()) {
	}
}

int PilaNum::cima() {
	if (!vacia())
        return datos % 10;
}

