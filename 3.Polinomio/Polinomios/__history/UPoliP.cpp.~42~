// ---------------------------------------------------------------------------

#pragma hdrstop

#include "UPoliP.h"
// ---------------------------------------------------------------------------
#pragma package(smart_init)

PoliP::PoliP() {
	ptr_poli = NULL;
	nt = 0;
}

NodoPo* PoliP::buscar_exponente(int exp) {
	for (NodoPo * aux = ptr_poli; aux != NULL; aux = aux->sig) {
		if (aux->exp == exp)
			return aux;
	}
	return NULL;
}

NodoPo* PoliP::buscar_termino_n(int i) {
	int c = 1;
	for (NodoPo * aux = ptr_poli; aux != NULL; aux = aux->sig) {
		if (c == i)
			return aux;
		c++;
	}
	return NULL;
}

bool PoliP::es_cero() {
	return ptr_poli == NULL;
}

int PoliP::grado() {
	if (!es_cero()) {
		int max = ptr_poli->exp;
		for (NodoPo * aux = ptr_poli; aux != NULL; aux = aux->sig) {
			if (aux->exp > max)
				max = aux->exp;
		}
        return max;
	}
}

int PoliP::coeficiente(int exp) {
	NodoPo* dir = buscar_exponente(exp);
	if (dir != NULL)
		return dir->coef;
	else
		cout << "No existe ese termino" << endl;
}

NodoPo* PoliP::anterior(NodoPo* dir) {
	NodoPo* aux = ptr_poli;
	NodoPo* ant = NULL;
	while (aux != NULL && aux != dir) {
		ant = aux;
		aux = aux->sig;
	}
	return ant;
}

void PoliP::suprime(NodoPo* dir) {
	if (dir == ptr_poli) {
		ptr_poli = ptr_poli->sig;
	}
	else {
		// --
		NodoPo* aux = ptr_poli;
		NodoPo* ant = NULL;
		while (aux != NULL && aux != dir) {
			ant = aux;
			aux = aux->sig;
		}
		// --
		NodoPo* ante = ant;
		ante->sig = dir->sig;
	}
	delete(dir);
}

void PoliP::asignar_coeficiente(int coef, int exp) {
	NodoPo* dir = buscar_exponente(exp);
	if (dir != NULL) {
		dir->coef = coef;
		if (coef == 0){
			suprime(dir);
            nt--;
		}
	}
}

void PoliP::poner_termino(int coef, int exp) {
	NodoPo* dir = buscar_exponente(exp);
	if (dir == NULL) {
		if (coef != 0) {
			NodoPo* nuevo = new NodoPo();
			nuevo->coef = coef;
			nuevo->exp = exp;
			nuevo->sig = ptr_poli;
			ptr_poli = nuevo;
            nt++;
		}
	}
	else {
		int new_coef = coef + dir->coef;
		dir->coef = new_coef;
		if (new_coef == 0){
			suprime(dir);
            nt--;
		}
	}
}

int PoliP::numero_terminos() {
	return nt;
}

int PoliP::exponente(int nro_ter) {
	NodoPo* dir = buscar_termino_n(nro_ter);
	if (dir != NULL)
		return dir->exp;
	else
		cout << "No existe ese termino" << endl;
}

string PoliP::to_str() {
	string r = "";
	int n = numero_terminos();
	for (int i = 1; i <= n; i++) {
		int exp = exponente(i);
		int coef = coeficiente(exp);
		if (coef > 0)
			r += "+";
		r += to_string(coef) + "x^" + to_string(exp);
	}
	return r;
}
